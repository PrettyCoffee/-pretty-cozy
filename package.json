{
  "name": "@pretty-cozy/root",
  "version": "0.0.1",
  "description": "Collection of pretty cozy utilities to make npm workflows easier",
  "author": "Pretty Coffee",
  "license": "MIT",
  "workspaces": [
    "packages/eslint-config",
    "packages/eslint-plugin",
    "packages/git-hooks"
  ],
  "scripts": {
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "cozy-git-hooks install"
  },
  "devDependencies": {
    "@pretty-cozy/eslint-config": "file:/packages/eslint-config",
    "@pretty-cozy/git-hooks": "file:/packages/git-hooks"
  }
}
